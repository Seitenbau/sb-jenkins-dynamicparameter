<j:jelly xmlns:j="jelly:core" xmlns:st="jelly:stapler" xmlns:d="jelly:define"
  xmlns:l="/lib/layout" xmlns:t="/lib/hudson" xmlns:f="/lib/form"
  xmlns:i="jelly:fmt" xmlns:p="/lib/hudson/project">
  <l:layout permission="${app.READ}" norefresh="true">

	  <l:side-panel>
	    <l:tasks>
	      <l:task icon="images/24x24/setting.gif" href="${rootURL}/manage" title="${%Manage Jenkins}" permission="${app.ADMINISTER}" />
      </l:tasks>
    </l:side-panel>

    <l:main-panel>

      <h1>
        <img src="${imagesURL}/48x48/${it.iconFileName}" alt="" />
        <j:out value="${%title}" />
      </h1>

      <j:out value="${%intro}" />

      <h3><j:out value="${%classPathDirText}"/></h3>

      <f:form method="post" action="setClassPathDir">
        <f:block>
		      <f:textbox name="classPathDir" value="${it.classPathDir}" />
	      </f:block>
        <f:block>
          <f:submit value="${%save}" />
        </f:block>
      </f:form>


      <h3><j:out value="${%uploadFile}"/></h3>

      <f:form method="post" action="uploadFile" name="uploadFile" enctype="multipart/form-data">
        <f:block>
          <input type="file" name="file" class="setting-input" />
        </f:block>
        <f:block>
          <f:submit value="${%upload}" />
        </f:block>
      </f:form>


      <h3><j:out value="${%uploadedFiles}"/></h3>

      <table class="pane">
        <j:forEach var="file" items="${it.uploadedFiles}">
          <tr style="border-top: 0px;">
            <td class="pane" width="86">
              <a href="downloadFile?file=${file}">
                <img width="16" height="16" title="${%downloadFile} ${file}" src="${imagesURL}/16x16/document_edit.gif" />
              </a>
              <j:out value=" " />
              <a href="deleteFile?file=${file}" onclick="return confirmDelete('${file}')">
                <img width="16" height="16" title="${%deleteFile} ${file}" src="${imagesURL}/16x16/edit-delete.gif" />
              </a>
            </td>
            <td class="pane">
              <j:out value="${file}" />
            </td>
          </tr>
        </j:forEach>
      </table>

      <script>
function confirmDelete(name) {
  if (confirm("${%deleteConfirmation} ["+name+"]?")) {
    return true;
  } else {
    return false;
  }
}
    </script>
    </l:main-panel>
  </l:layout>
</j:jelly>
